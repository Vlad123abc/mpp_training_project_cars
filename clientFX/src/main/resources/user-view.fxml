<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cars.gui.UserController">
   <children>
      <Label layoutX="35.0" layoutY="30.0" text="Cars:" />
       <TableView fx:id="carTableView" layoutX="35.0" layoutY="80.0" prefHeight="200.0" prefWidth="300.0">
           <columns>
               <TableColumn fx:id="carBrandColumn" prefWidth="200.0" text="Brand" />
               <TableColumn fx:id="carHpColumn" prefWidth="100.0" text="Hp" />
           </columns>
       </TableView>
      <Label layoutX="410.0" layoutY="80.0" text="Filter by brand:" />
      <ComboBox fx:id="carBrandComboBox" layoutX="410.0" layoutY="120.0" prefWidth="150.0" />
      <Button layoutX="410.0" layoutY="180.0" mnemonicParsing="false" onAction="#onFiltreaza" text="Filtreaza" />
      <Button layoutX="495.0" layoutY="180.0" mnemonicParsing="false" onAction="#onAnuleaza" text="Anuleaza" />
      <Label layoutX="34.0" layoutY="310.0" text="Add Car:" />
      <Label layoutX="34.0" layoutY="350.0" text="Brand:" />
      <Label layoutX="37.0" layoutY="390.0" text="HP:" />
      <TextField fx:id="txtBrand" layoutX="100.0" layoutY="346.0" />
      <TextField fx:id="txtHp" layoutX="100.0" layoutY="386.0" />
      <Button layoutX="31.0" layoutY="430.0" mnemonicParsing="false" text="Add" onAction="#onAddCar"/>
   </children>
</AnchorPane>
